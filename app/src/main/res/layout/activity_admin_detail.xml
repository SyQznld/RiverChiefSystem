<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.appler.riverchiefsystem.ui.activity.AdminDetailActivity">

    <include layout="@layout/toolbar_layout_addiv" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="#eee" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_admin_detail_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:text="头像"
                        android:textColor="#999"
                        android:textSize="14sp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_admin_detail_head"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="10dp"
                        android:src="@mipmap/ic_launcher_round"
                        app:civ_border_color="@color/black"
                        app:civ_border_width="1dp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="#eee" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/rl_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/toolbar_height">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_20"
                        android:text="姓名"
                        android:textColor="#999"
                        android:textSize="14sp" />

                    <ImageButton
                        android:id="@+id/ib1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:background="@null"
                        android:clickable="false"
                        android:src="@drawable/ic_arrow_right"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/tv_admin_detail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/ib1"
                        android:text="管理员"
                        android:textColor="#3b3a3a"
                        android:textSize="15sp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="#cccccc" />


                <RelativeLayout
                    android:id="@+id/rl_role"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/toolbar_height">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_20"
                        android:text="职位"
                        android:textColor="#999"
                        android:textSize="14sp" />

                    <ImageButton
                        android:id="@+id/ib2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:background="@null"
                        android:clickable="false"
                        android:src="@drawable/ic_arrow_right"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/tv_admin_detail_role"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/ib2"
                        android:text="一级总路长"
                        android:textColor="#3b3a3a"
                        android:textSize="15sp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="#cccccc" />


                <RelativeLayout
                    android:id="@+id/rl_tel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/toolbar_height">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_20"
                        android:text="电话"
                        android:textColor="#999"
                        android:textSize="14sp" />

                    <ImageButton
                        android:id="@+id/ib3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:background="@null"
                        android:clickable="false"
                        android:src="@drawable/ic_arrow_right"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/tv_admin_detail_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/ib3"
                        android:text="15637889778@163.com"
                        android:textColor="#3b3a3a"
                        android:textSize="15sp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="#cccccc" />


                <RelativeLayout
                    android:id="@+id/rl_section"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/toolbar_height">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_20"
                        android:text="所属部门"
                        android:textColor="#999"
                        android:textSize="14sp" />

                    <ImageButton
                        android:id="@+id/ib4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:background="@null"
                        android:clickable="false"
                        android:src="@drawable/ic_arrow_right"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/tv_admin_detail_section"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/ib4"
                        android:text="软件一部"
                        android:textColor="#3b3a3a"
                        android:textSize="15sp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="#cccccc" />


                <!--性别-->
                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rl_sex"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/toolbar_height">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_20"
                        android:text="性别"
                        android:textColor="#999"
                        android:textSize="14sp" />

                    <ImageButton
                        android:id="@+id/ib5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:background="@null"
                        android:clickable="false"
                        android:src="@drawable/ic_arrow_right"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/tv_admin_detail_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/ib5"
                        android:text="男"
                        android:textColor="#3b3a3a"
                        android:textSize="15sp" />

                </RelativeLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="#cccccc" />


                <!--层级-->
                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rl_hierarchy"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/toolbar_height">

                    <TextView
                        android:id="@+id/city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_20"
                        android:text="层级"
                        android:textColor="#999"
                        android:textSize="14sp" />

                    <ImageButton
                        android:id="@+id/ib6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:background="@null"
                        android:clickable="false"
                        android:src="@drawable/ic_arrow_right"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/tv_admin_detail_hierarchy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/ib6"
                        android:text="总路长"
                        android:textColor="#3b3a3a"
                        android:textSize="15sp" />

                </RelativeLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="#cccccc" />


                <!--警号-->
                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rl_number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/toolbar_height">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_20"
                        android:text="警号"
                        android:textColor="#999"
                        android:textSize="14sp" />

                    <ImageButton
                        android:id="@+id/ib7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:background="@null"
                        android:clickable="false"
                        android:src="@drawable/ic_arrow_right"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/tv_admin_detail_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/ib7"
                        android:text="123456"
                        android:textColor="#3b3a3a"
                        android:textSize="15sp" />

                </RelativeLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="#cccccc" />

                <!--身份证号-->
                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rl_iccard"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/toolbar_height">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_20"
                        android:text="身份证号"
                        android:textColor="#999"
                        android:textSize="14sp" />

                    <ImageButton
                        android:id="@+id/ib8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:background="@null"
                        android:clickable="false"
                        android:src="@drawable/ic_arrow_right"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/tv_admin_detail_iccard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/ib8"
                        android:text="1234567890"
                        android:textColor="#3b3a3a"
                        android:textSize="15sp" />

                </RelativeLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="#cccccc" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
