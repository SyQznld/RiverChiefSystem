<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.appler.riverchiefsystem.ui.activity.ProblemListActivity">

    <include layout="@layout/toolbar_layout_addiv" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/srl_problem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#efefef">

            <com.scwang.smartrefresh.header.MaterialHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/toolbar_height" />

            <com.fingdo.statelayout.StateLayout
                android:id="@+id/sl_problem_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/list_height">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_problem_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.fingdo.statelayout.StateLayout>

            <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

        <com.appler.riverchiefsystem.utils.filter.FilterView
            android:id="@+id/fv_problem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>


</LinearLayout>
